[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE={{ nexus_max_filedescriptors }}
ExecStart={{ nexus_installation_path }}/bin/nexus start
ExecStop={{ nexus_installation_path }}/bin/nexus stop
User={{ nexus_user }}
Group={{ nexus_group }}
Restart=on-abort

[Install]
WantedBy=multi-user.target
